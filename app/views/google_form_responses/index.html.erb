<% content_for :title, "Google form responses" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Google form responses</h1>
  </div>

  <div id="google_form_responses" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @google_form_responses.any? %>
      <% @google_form_responses.each do |google_form_response| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render google_form_response %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Show", [@course, @google_sheet, google_form_response], class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No google form responses found.</p>
    <% end %>
  </div>
</div>
