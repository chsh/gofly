<div id="<%= dom_id submission %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Type:</strong>
    <%= submission.type %>
  </div>
  <div>
    <strong class="block font-medium mb-1">File:</strong>
    <% if submission.file.presnet? %>
      <%= link_to submission.file.filename,
                  rails_blob_path(submission.file, disposition: "attachment") %>
    <% end %>
  </div>
</div>
